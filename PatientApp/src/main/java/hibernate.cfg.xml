<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/patientapp</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.default-cascade">all</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.search.autoregister_listeners">false</property>
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<property name="hibernate.event.merge.entity_copy_observer">allow</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<!--//-->
		<mapping resource="com/re/bean/Organisations.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/UserInfo.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/PrivilegeGroup.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/PrivilegeGroupItems.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/EmployeeRoles.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/LoginSessionInfo.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/ConfigProperties.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/TaskInfo.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/TaskExecutionInfo.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/TaskLayoutParameters.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/EmailAttachmentLayout.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/TaskScheduleInfo.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/TaskSentInfo.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/Patient.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/Doctor.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/Hospital.hbm.xml" />
		<!--//-->
		<mapping resource="com/re/bean/ContactUs.hbm.xml" />
		<!--//-->
		</session-factory>
</hibernate-configuration>
